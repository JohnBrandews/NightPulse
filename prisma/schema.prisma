// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id                    String   @id @default(cuid())
  email                 String   @unique
  password              String?
  name                  String
  phone                 String?
  role                  String   // 'user' | 'club' | 'promoter' | 'dj' | 'admin'
  gender                String?  // 'male' | 'female' | 'other'
  lookingFor            String?  // 'men' | 'women' | 'both'
  dateOfBirth           DateTime?
  age                   Int?
  ageVerified           Boolean  @default(false)
  idVerificationStatus  String   @default("not_required") // 'pending' | 'approved' | 'rejected' | 'not_required'
  idVerificationDoc     String?
  county                String?  // Kenya county
  bio                   String?
  profileImage          String?
  images                String?  // JSON array as string
  isVerified            Boolean  @default(false)
  isActive              Boolean  @default(true)
  createdAt             DateTime @default(now())
  updatedAt             DateTime @updatedAt

  // Club specific fields
  clubName              String?
  clubAddress           String?
  clubCounty            String?  // Kenya county
  clubMusicType         String?  // JSON array as string
  clubDressCode         String?
  clubCapacity          Int?

  // DJ specific fields
  djName                String?
  djGenre               String?  // JSON array as string
  djMusicLinks          String?  // JSON array as string
  djBio                 String?

  // Relations
  ownedClubs            Club[]           @relation("ClubOwner")
  bookings              Booking[]
  invoices              Invoice[]
  sentMessages          Message[]        @relation("MessageSender")
  receivedMessages      Message[]        @relation("MessageRecipient")
  applications          Application[]
  promotedEvents        Event[]           @relation("EventPromoter")
  djEvents              Event[]           @relation("EventDJ")

  // Online status fields
  lastActive    DateTime @default(now())
  isOnline      Boolean  @default(false)

  // Password Reset fields
  resetToken       String?  @unique
  resetTokenExpiry DateTime?

  @@index([email])
  @@index([role])
  @@index([county])
  @@index([isActive])
  @@index([isOnline])
}

model Club {
  id            String   @id @default(cuid())
  ownerId       String
  owner         User     @relation("ClubOwner", fields: [ownerId], references: [id])
  name          String
  address       String
  county        String   // Kenya county
  musicType     String   // JSON array as string
  dressCode     String
  capacity      Int
  description   String?
  images        String?  // JSON array as string
  logo          String?
  website       String?
  phone         String?
  email         String?
  openingHours  String?  // JSON object as string
  isVerified    Boolean  @default(false)
  isActive      Boolean  @default(true)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  // Relations
  events        Event[]
  bookings      Booking[]
  gigs          Gig[]
  invoices      Invoice[]

  @@index([county])
  @@index([isVerified])
  @@index([isActive])
}

model Event {
  id              String   @id @default(cuid())
  clubId          String
  club            Club     @relation(fields: [clubId], references: [id])
  promoterId      String?
  promoter        User?    @relation("EventPromoter", fields: [promoterId], references: [id])
  djId            String?
  dj              User?    @relation("EventDJ", fields: [djId], references: [id])
  title           String
  description     String?
  date            DateTime
  startTime       String
  endTime         String
  eventType       String   @default("regular") // 'regular' | 'special' | 'featured'
  coverCharge     Float?
  dressCode        String?
  ageRestriction  Int?
  image           String?
  isFeatured      Boolean  @default(false)
  isActive        Boolean  @default(true)
  status          String   @default("active") // 'active' | 'cancelled' | 'completed'
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  
  // New fields for hiring
  needsDj         Boolean  @default(false)
  needsPromoter   Boolean  @default(false)

  // Relations
  bookings        Booking[]
  applications    Application[]

  @@index([clubId])
  @@index([date])
  @@index([isFeatured])
}

model Gig {
  id          String   @id @default(cuid())
  clubId      String
  club        Club     @relation(fields: [clubId], references: [id])
  title       String
  description String
  role        String   // 'dj' | 'promoter' | 'both'
  status      String   @default("open") // 'open' | 'closed'
  budget      String?
  requirements String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  applications Application[]

  @@index([clubId])
}

model Booking {
  id              String   @id @default(cuid())
  userId          String
  user            User     @relation(fields: [userId], references: [id])
  clubId          String
  club            Club     @relation(fields: [clubId], references: [id])
  eventId         String?
  event           Event?   @relation(fields: [eventId], references: [id])
  bookingType     String   // 'table' | 'booth' | 'general' | 'dj_gig'
  date            DateTime
  time            String
  numberOfGuests  Int
  specialRequests String?
  status          String   @default("pending") // 'pending' | 'confirmed' | 'rejected' | 'cancelled' | 'completed'
  tableNumber     String?
  totalAmount     Float?
  paymentStatus   String   @default("pending") // 'pending' | 'paid' | 'refunded'
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  // Relations
  invoice         Invoice?

  @@index([userId])
  @@index([clubId])
  @@index([status])
}

model Message {
  id            String   @id @default(cuid())
  senderId      String
  sender        User     @relation("MessageSender", fields: [senderId], references: [id])
  recipientId   String
  recipient     User     @relation("MessageRecipient", fields: [recipientId], references: [id])
  content       String
  type          String   @default("message") // 'message' | 'club_invite' | 'application_update'
  relatedClubId String?
  relatedEventId String?
  
  // Message status (like WhatsApp ticks)
  status        String   @default("sent") // 'sent' | 'delivered' | 'read'
  
  isModerated   Boolean  @default(false)
  isBlocked     Boolean  @default(false)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@index([senderId])
  @@index([recipientId])
  @@index([status])
}

model Application {
  id          String   @id @default(cuid())
  applicantId String
  applicant   User     @relation(fields: [applicantId], references: [id])
  
  // Application can be for an Event OR a Gig
  eventId     String?
  event       Event?   @relation(fields: [eventId], references: [id])
  
  gigId       String?
  gig         Gig?     @relation(fields: [gigId], references: [id])

  message     String?
  status      String   @default("pending") // 'pending' | 'accepted' | 'rejected'
  
  // Detailed application fields
  name             String?
  email            String?
  phone            String?
  musicLinks       String? // JSON array? Or just string for now?
  salaryExpectation String? // "10000" (KES)
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([applicantId])
  @@index([eventId])
  @@index([gigId])
  @@index([status])
}

model Invoice {
  id              String   @id @default(cuid())
  bookingId       String   @unique
  booking         Booking  @relation(fields: [bookingId], references: [id])
  clubId          String
  club            Club     @relation(fields: [clubId], references: [id])
  userId          String
  user            User     @relation(fields: [userId], references: [id])
  
  // Invoice details
  invoiceNumber   String   @unique
  clientName      String
  clientEmail     String
  clientPhone     String?
  
  // Dates
  issueDate       DateTime @default(now())
  dueDate         DateTime
  
  // Amount in KES
  subtotal        Float    @default(0)
  tax             Float    @default(0)
  totalAmount     Float    @default(0)
  
  // Status: pending, paid, overdraft
  status          String   @default("pending")
  paymentStatus   String   @default("pending") // pending, paid, overdue
  
  // Notes
  notes           String?
  
  // Email sent tracking
  emailSent       Boolean  @default(false)
  emailSentAt     DateTime?
  
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@index([clubId])
  @@index([userId])
  @@index([status])
  @@index([paymentStatus])
}
